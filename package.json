{
  "name": "space-station-escape",
  "version": "1.0.0",
  "description": "A 60-minute MCP escape room challenge teaching Claude Code features through a space station emergency scenario",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js --http",
    "start:stdio": "node build/index.js",
    "dev": "ts-node src/index.ts --http",
    "dev:stdio": "ts-node src/index.ts",
    "clean": "rm -rf build",
    "prestart": "npm run build",
    "test-crypto": "node encryption-utils.js",
    "regenerate-data": "node regenerate-challenge-data.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "escape-room",
    "claude-code",
    "typescript",
    "educational"
  ],
  "author": "Claude Code Challenge",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.0",
    "express": "^4.18.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}